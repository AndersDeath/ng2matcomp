# top-most EditorConfig file
root = true

[*]
trim_trailing_whitespace = true

# Unix-style newlines with a newline ending every file except .json
[*]
end_of_line = lf
#insert_final_newline = true
[*.{js,ts,html,css,scss,sh,eslintignore,gitignore,bowerrc}]
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Default charset
[*.{js,ts,html,css,scss,json,sh}]
charset = utf-8

# 4 space indentation for markup and css
[*.{html,css,scss}]
indent_style = tab
indent_size = 4

# 2 space indentation for code
[*.{js,ts,json,sh,eslintignore,gitignore,bowerrc}]
indent_style = tab
indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false
